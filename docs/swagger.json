        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/medicines": {
            "get": {
                "description": "Get All Medicine's Data",
                "produces": [
                    "application/json"
                ],
                "summary": "Get Medicine",
                "operationId": "get-medicines",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/main.Medicine"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Create New Medicine Data",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Create New Medicine",
                "operationId": "create-medicine",
                "parameters": [
                    {
                        "description": "Medicine Data",
                        "name": "medicine",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/main.Medicine"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/main.Medicine"
                        }
                    }
                }
            }
        },
        "/medicines/{id}": {
            "get": {
                "description": "Get Medicine Data By ID",
                "produces": [
                    "application/json"
                ],
                "summary": "Get Medicine By ID",
                "operationId": "get-medicine-by-id",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Medicine ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/main.Medicine"
                        }
                    },
                    "404": {
                        "description": "Medicine is not exist",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "put": {
                "description": "Update Medicine By ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Update Medicine",
                "operationId": "update-medicine",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Medicine ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Medicine Info",
                        "name": "medicine",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/main.Medicine"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/main.Medicine"
                        }
                    },
                    "404": {
                        "description": "Medicine is not exist",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete Medicine By ID",
                "produces": [
                    "application/json"
                ],
                "summary": "Delete Medicine",
                "operationId": "delete-medicine",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Medicine ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "404": {
                        "description": "Medicine is not exist",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "main.Medicine": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "manufacturer": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "stock": {
                    "type": "integer"
                }
            }
        }
    }
}